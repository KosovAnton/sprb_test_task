<configuration>
    <property name="BUILD_DIR" value="${BUILD_DIR:-build}"/>

    <!-- Файл только для уборки -->
    <appender name="CLEANUP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${BUILD_DIR}/logs/cleanup.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${BUILD_DIR}/logs/cleanup.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Логгер для очистки: только файл, без консоли -->
    <logger name="CLEANUP" level="INFO" additivity="false">
        <appender-ref ref="CLEANUP_FILE"/>
    </logger>

    <!-- Остальной root-лог как у тебя (можешь оставить свой текущий) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>